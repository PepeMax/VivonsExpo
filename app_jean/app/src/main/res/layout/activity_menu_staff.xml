<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuStaff">

    <ImageView
        android:id="@+id/imagesSIO"
        android:layout_width="match_parent"
        android:layout_height="178dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/sio"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        android:id="@+id/buttonGestionSecteur"
        android:layout_width="200dp"
        android:layout_height="75dp"
        android:text="Gestion des secteurs / univers"
        app:layout_constraintTop_toBottomOf="@id/imagesSIO"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <Button
        android:id="@+id/buttonAffectStand"
        android:layout_width="200dp"
        android:layout_height="75dp"
        android:text="Affecter un stand"
        app:layout_constraintTop_toBottomOf="@id/buttonGestionSecteur"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <Button
        android:id="@+id/buttonModifStand"
        android:layout_width="200dp"
        android:layout_height="75dp"
        android:text="Modifier un stand"
        app:layout_constraintTop_toBottomOf="@id/buttonAffectStand"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <Button
    android:id="@+id/buttonValidDemande"
    android:layout_width="200dp"
    android:layout_height="75dp"
    android:text="Valider une demande"
    app:layout_constraintTop_toBottomOf="@id/buttonModifStand"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>