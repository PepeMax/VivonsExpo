<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RepartitionSecteur">

    <TextView
        android:id="@+id/TextReparSecteur"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Liste des secteurs avec le nombre d'exposant de l'univer "
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ListView
        android:id="@+id/listViewRepSecteur"
        android:layout_marginTop="8dp"
        android:layout_width="225dp"
        android:layout_height="250dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TextReparSecteur"/>

    <Button
        android:id="@+id/buttonHallRepartitionSecteur"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Parametrer Hall"
        android:textSize="18dp"
        android:textAllCaps="false"
        app:layout_constraintTop_toBottomOf="@+id/listViewRepSecteur"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <Button
        android:id="@+id/buttonQuitterRepartitionSecteur"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Quitter"
        android:textSize="18dp"
        android:textAllCaps="false"
        app:layout_constraintTop_toBottomOf="@+id/buttonHallRepartitionSecteur"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>