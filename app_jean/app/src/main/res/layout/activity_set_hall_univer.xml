<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SetHallUniver">

    <TextView
        android:id="@+id/TextHallUnivers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Configuration du hall de l'univer "
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <Spinner
        android:id="@+id/spinnerHall"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:hint="Numero de Hall"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TextHallUnivers"/>

    <Button
        android:id="@+id/buttonValiderUniverHall"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Enregistrer"
        android:textSize="18dp"
        android:layout_marginTop="5dp"
        android:textAllCaps="false"
        app:layout_constraintTop_toBottomOf="@+id/spinnerHall"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <Button
        android:id="@+id/buttonQuitterHallUniver"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Annuler"
        android:textSize="18dp"
        android:layout_marginTop="5dp"
        android:textAllCaps="false"
        app:layout_constraintTop_toBottomOf="@+id/buttonValiderUniverHall"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>



</androidx.constraintlayout.widget.ConstraintLayout>