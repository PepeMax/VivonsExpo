    <TextView
        android:id="@+id/textLogin"
        android:layout_width="174dp"
        android:layout_height="40dp"
        android:layout_marginLeft="10px"
        android:text="Login"
        android:textSize="15dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="16dp" />

    <EditText
        android:id="@+id/inputLogin"
        android:layout_width="220dp"
        android:layout_height="40dp"
        android:inputType="text"
        app:layout_constraintStart_toEndOf="@+id/textLogin"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="16dp" />

    <TextView
        android:id="@+id/textMDP"
        android:layout_width="174dp"
        android:layout_height="40dp"
        android:layout_marginLeft="10px"
        android:layout_marginTop="10dp"
        android:text="Mot de passe"
        android:textSize="15dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textLogin" />

    <EditText
        android:id="@+id/inputMDP"
        android:layout_width="220dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:inputType="text"
        app:layout_constraintStart_toEndOf="@+id/textMDP"
        app:layout_constraintTop_toBottomOf="@+id/inputLogin" />

    <TextView
        android:id="@+id/textRS"
        android:layout_width="174dp"
        android:layout_height="40dp"
        android:layout_marginLeft="10px"
        android:layout_marginTop="10dp"
        android:text="Raison sociale"
        android:textSize="15dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textMDP"/>

    <EditText
        android:id="@+id/inputRS"
        android:layout_width="220dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:inputType="text"
        app:layout_constraintStart_toEndOf="@+id/textRS"
        app:layout_constraintTop_toBottomOf="@+id/inputMDP"/>

    <TextView
        android:id="@+id/textAE"
        android:layout_width="174dp"
        android:layout_height="40dp"
        android:layout_marginLeft="10px"
        android:layout_marginTop="10dp"
        android:text="Activité de l'entreprise"
        android:textSize="15dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textRS" />

    <EditText
        android:id="@+id/inputAE"
        android:layout_width="220dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:inputType="text"
        app:layout_constraintStart_toEndOf="@+id/textAE"
        app:layout_constraintTop_toBottomOf="@+id/inputRS" />

    <TextView
        android:id="@+id/textNom"
        android:layout_width="174dp"
        android:layout_height="40dp"
        android:layout_marginLeft="10px"
        android:layout_marginTop="10dp"
        android:text="Nom"
        android:textSize="15dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textAE" />

    <EditText
        android:id="@+id/inputNom"
        android:layout_width="220dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:inputType="text"

        app:layout_constraintStart_toEndOf="@+id/textNom"
        app:layout_constraintTop_toBottomOf="@+id/inputAE" />

    <TextView
        android:id="@+id/textPrenom"
        android:layout_width="174dp"
        android:layout_height="40dp"
        android:layout_marginLeft="10px"
        android:layout_marginTop="10dp"
        android:text="Prénom"
        android:textSize="15dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textNom" />

    <EditText
        android:id="@+id/inputPrenom"
        android:layout_width="220dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:inputType="text"
        app:layout_constraintStart_toEndOf="@+id/textPrenom"
        app:layout_constraintTop_toBottomOf="@+id/inputNom" />

    <TextView
        android:id="@+id/textTel"
        android:layout_width="174dp"
        android:layout_height="40dp"
        android:layout_marginLeft="10px"
        android:layout_marginTop="10dp"
        android:text="Téléphone"
        android:textSize="15dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textPrenom" />

    <EditText
        android:id="@+id/inputTel"
        android:layout_width="220dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:inputType="text"

        app:layout_constraintStart_toEndOf="@+id/textTel"
        app:layout_constraintTop_toBottomOf="@+id/inputPrenom" />

    <TextView
        android:id="@+id/textEmail"
        android:layout_width="174dp"
        android:layout_height="40dp"
        android:layout_marginLeft="10px"
        android:layout_marginTop="10dp"
        android:text="E-mail"
        android:textSize="15dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textTel" />

    <EditText
        android:id="@+id/inputEmail"
        android:layout_width="220dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:inputType="textEmailAddress"

        app:layout_constraintStart_toEndOf="@+id/textEmail"
        app:layout_constraintTop_toBottomOf="@+id/inputTel" />

    <TextView
        android:id="@+id/textSiteWeb"
        android:layout_width="174dp"
        android:layout_height="40dp"
        android:layout_marginLeft="10px"
        android:layout_marginTop="10dp"
        android:text="Site internet"
        android:textSize="15dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textEmail" />

    <EditText
        android:id="@+id/inputSiteWeb"
        android:layout_width="220dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:inputType="text"

        app:layout_constraintStart_toEndOf="@+id/textSiteWeb"
        app:layout_constraintTop_toBottomOf="@+id/inputEmail" />

    <TextView
        android:id="@+id/textRadioGroup"
        android:layout_width="174dp"
        android:layout_height="55dp"
        android:layout_marginLeft="10px"
        android:layout_marginTop="10dp"
        android:text="Exposez-vous pour la première fois sur le salon ?"
        android:textSize="15dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textSiteWeb" />

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="205dp"
        android:layout_height="55dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toEndOf="@+id/textRadioGroup"
        app:layout_constraintTop_toBottomOf="@+id/inputSiteWeb">


        <RadioButton
            android:id="@+id/radioOui"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:text="Oui"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <RadioButton
            android:id="@+id/radioNon"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:text="Non"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </RadioGroup>

    <TextView
        android:id="@+id/textSpinner"
        android:layout_width="180dp"
        android:layout_height="25dp"
        android:layout_marginLeft="10px"
        android:layout_marginTop="10dp"
        android:text="Secteur du salon souhaité"
        android:textSize="15dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textRadioGroup" />

    <Spinner
        android:id="@+id/spinnerSalon"
        android:layout_width="220dp"
        android:layout_height="25dp"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textSpinner"
        app:layout_constraintTop_toBottomOf="@+id/radioGroup" />

    <Button
        android:id="@+id/buttonInscriptionExposant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="S'inscrire"
        tools:layout_editor_absoluteX="251dp"
        tools:layout_editor_absoluteY="469dp"
        app:layout_constraintTop_toBottomOf="@+id/spinnerSalon"
        tools:ignore="MissingConstraints" />

    <!--        </LinearLayout>-->

    <!--    </ScrollView>-->

</androidx.constraintlayout.widget.ConstraintLayout>