<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Consult_Stand">

    <ImageView
        android:id="@+id/imagesSIO"
        android:layout_width="match_parent"
        android:layout_height="178dp"
        android:src="@drawable/vivons_logo"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/titleNumH"
        android:layout_width="180dp"
        android:layout_height="25dp"
        android:layout_marginLeft="10px"
        android:layout_marginTop="10dp"
        android:text="Numéro Hall :"
        android:textSize="15dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imagesSIO"
        app:layout_constraintStart_toStartOf="parent"
         />

    <TextView
        android:id="@+id/textNumH"
        android:layout_width="180dp"
        android:layout_height="25dp"
        android:layout_marginLeft="50px"
        android:layout_marginTop="10dp"
        android:textSize="15dp"
        app:layout_constraintTop_toBottomOf="@+id/imagesSIO"
        app:layout_constraintStart_toEndOf="@+id/titleNumH"
        />

    <TextView
        android:id="@+id/titleCodeA"
        android:layout_width="180dp"
        android:layout_height="25dp"
        android:layout_marginLeft="10px"
        android:layout_marginTop="10dp"
        android:text="Code Allée :"
        android:textSize="15dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleNumH"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/textCodeA"
        android:layout_width="180dp"
        android:layout_height="25dp"
        android:layout_marginLeft="50px"
        android:layout_marginTop="10dp"
        android:textSize="15dp"
        app:layout_constraintTop_toBottomOf="@+id/textNumH"
        app:layout_constraintStart_toEndOf="@+id/titleCodeA"
        />

    <TextView
        android:id="@+id/titleNumT"
        android:layout_width="180dp"
        android:layout_height="25dp"
        android:layout_marginLeft="10px"
        android:layout_marginTop="10dp"
        android:text="Numéro Travée :"
        android:textSize="15dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleCodeA"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/textNumT"
        android:layout_width="180dp"
        android:layout_height="25dp"
        android:layout_marginLeft="50px"
        android:layout_marginTop="10dp"
        android:textSize="15dp"
        app:layout_constraintTop_toBottomOf="@+id/textCodeA"
        app:layout_constraintStart_toEndOf="@+id/titleNumT"
        />

    <TextView
        android:id="@+id/titleNumS"
        android:layout_width="180dp"
        android:layout_height="25dp"
        android:layout_marginLeft="10px"
        android:layout_marginTop="10dp"
        android:text="Numéro Secteur"
        android:textSize="15dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleNumT"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/textNumS"
        android:layout_width="180dp"
        android:layout_height="25dp"
        android:layout_marginLeft="50px"
        android:layout_marginTop="10dp"
        android:textSize="15dp"
        app:layout_constraintTop_toBottomOf="@+id/textNumT"
        app:layout_constraintStart_toEndOf="@+id/titleNumS"
        />

    <Button
        android:id="@+id/buttonDemandeAutreStand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Demander un autre stand"
        app:layout_constraintTop_toBottomOf="@+id/textNumS"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="80dp" />


</androidx.constraintlayout.widget.ConstraintLayout>