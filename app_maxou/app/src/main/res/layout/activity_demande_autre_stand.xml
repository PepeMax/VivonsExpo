<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Demande_autre_stand">

    <ImageView
        android:id="@+id/imagesSIO"
        android:layout_width="match_parent"
        android:layout_height="178dp"
        android:src="@drawable/vivons_logo"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/titleDemande"
        android:layout_width="250dp"
        android:layout_height="25dp"
        android:layout_gravity="center"
        android:layout_marginStart="80dp"
        android:layout_marginTop="44dp"
        android:text="Demande de changement de stand"
        android:textSize="15dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imagesSIO" />

    <TextView
        android:id="@+id/titleMotif"
        android:layout_width="55dp"
        android:layout_height="23dp"
        android:layout_gravity="center"
        android:layout_marginStart="176dp"
        android:layout_marginTop="44dp"
        android:text="Motif :"
        android:textSize="15dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleDemande"
         />

    <EditText
        android:id="@+id/editTextMotif"
        android:layout_width="224dp"
        android:layout_height="238dp"
        android:ems="10"
        android:gravity="start|top"
        android:inputType="textMultiLine"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="93dp"
        tools:layout_editor_absoluteY="349dp"
        app:layout_constraintTop_toBottomOf="@+id/titleMotif"
        />

    <Button
        android:id="@+id/buttonEnvoyerDemande"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Envoyer demande"
        app:layout_constraintTop_toBottomOf="@+id/editTextMotif"
        tools:layout_editor_absoluteX="80dp"
        tools:ignore="MissingConstraints" />


</androidx.constraintlayout.widget.ConstraintLayout>